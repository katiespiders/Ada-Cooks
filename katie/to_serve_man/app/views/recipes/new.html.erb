<%= form_tag recipes_path do %>
  <div>
    <%= label_tag "Title" %>
    <%= text_field_tag "recipe_forms[title]" %>
  </div>

  <div>
    <%= label_tag "Author" %>
    <%= text_field_tag "recipe_forms[author]" %>
  </div>

  <div>
    <%= select_tag(:ingredient_id, options_from_collection_for_select(Ingredient.all, :id, :name), size: 8) %>
  <%= submit_tag %>
<% end %>
