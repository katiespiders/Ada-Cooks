<%= form_tag recipes_path do %>
  <div>
    <%= label_tag "recipe_forms[name]", "Name" %>
    <%= text_field_tag "recipe_forms[name]" %>

    <%= label_tag "recipe_forms[author]", "Author" %>
    <%= text_field_tag "recipe_forms[author]" %>
  </div>

  <div>
    <%= label_tag "recipe_forms[prep_time]", "Prep time (hands-on)" %>
    <%= number_field_tag "recipe_forms[prep_time]" %>
    <%= label_tag "recipe_forms[cook_time]", "Cook time (hands-off)" %>
    <%= number_field_tag "recipe_forms[cook_time]" %>
  </div>

  <div>
    <%= label_tag "recipe_forms[difficulty]", "Difficulty rating" %>
    <%= number_field_tag "recipe_forms[difficulty]" %>
    <%= label_tag "recipe_forms[servings]", "Servings" %>
    <%= number_field_tag "recipe_forms[servings]" %>
  </div>

  <div>
    <%= label_tag "recipe_forms[ingredients]", "Ingredients" %>
    <%= select_tag("recipe_forms[ingredients]", options_from_collection_for_select(Ingredient.all, :id, :name), size: 8, multiple: true) %>
  </div>

  <div>
    <%= label_tag "recipe_forms[new_ingredients]", "Add new ingredients (comma separated)" %>
    <%= text_field_tag "recipe_forms[new_ingredients]" %>
  </div>
  
  <div>
    <%= label_tag "recipe_forms[steps]", "Instructions" %>
    <%= text_area_tag "recipe_forms[steps]" %>
  </div>
  <%= submit_tag %>
<% end %>
